@model Timetable.Models.AppUserModel

@{
    ViewData["Title"] = "Профиль";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Почта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Должность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
    @if (User.IsInRole("Админ"))
    {
        <a class="btn btn-primary" asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    }

</div>
<br>
<div>
    @if (User.IsInRole("Админ"))
    {
        <a asp-action="Index">Назад</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="Home">Назад</a>
    }

</div>
